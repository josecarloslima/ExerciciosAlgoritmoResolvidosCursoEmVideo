algoritmo "fatorial melhorado"
var
   C, N, F: Inteiro
   R: Caractere
inicio
      Repita
            Escreva("Digite um número: ")
            Leia(N)
            C <- N
            F <- 1
            Repita
                  F <- F * C
                  C <- C - 1
            Ate (C < 1)
            Escreval("O valor fatorial de ", N, " é: ", F)
            Escreva("Quer continuar? [S/N] ")
            Leia(R)
            LimpaTela
      Ate (R = "N")
fimalgoritmo
